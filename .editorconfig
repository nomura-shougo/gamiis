root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# shfmt (https://github.com/mvdan/sh)
# シェルスクリプトはファイル名に拡張子が無いケースが多いので
# `*` に設定する必要がある
switch_case_indent = true
space_redirects = true

[*.md]
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 4

[{Makefile,*.mk}]
indent_style = tab

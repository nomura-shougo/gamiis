<% content_for :title, 'gamiis' %>
<% content_for :content do %>
<div class="container">
  <div class="row mb-4">
    <div class="col-lg-6 offset-lg-3">
      <span class="input-group-btn">
        <%= link_to '<<', user_path(@user), class: 'btn btn-outline-secondary me-2' %>
      </span>
      <div class="row d-flex justify-content-between align-items-end my-3">
        <div class="col-8">
          <h3 class="mb-0"><%= @user.name %>の参加グループ</h3>
        </div>
        <div class="col-4 text-end text-secondary">
          <%= @topics.count %>グループ
        </div>
      </div>
      <div class="row g-2 mb-4">
        <% @topics.each do |topic| %>
        <div class="col-12">
          <div class="card">
            <div class="row g-0">
              <div class="col-md-3">
                <a href="#">
                  <img src="..." class="" alt="Apex IMAGE">
                </a>
              </div>
              <div class="col-md-9">
                <div class="card-title">
                  <%= link_to topic.name, topic_posts_path(topic), class: 'stretched-link' %></div>
                <div class="card-body">
                  <p class="card-text"><small>190人</small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @topics %>
      </div>
    </div>
  </div>
</div>
<% end %>

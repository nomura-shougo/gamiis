<% content_for :title, 'gamiis' %>
<% content_for :content do %>
<div class="container">
  <div class="col-lg-6 offset-lg-3">
    <h4 class="mb-3">ログイン</h4>
    <div class="row g-3">
      <%= form_for :session, url: signin_path, method: :post do |f| %>
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-control' %>
      <%= f.label :password, class: 'form-label' %>
      <%= f.text_field :password, class: 'form-control', type: 'password' %>
      <div class="col-12 mt-2">
        <% flash.each do |message_type, message| %>
        <p class="text-center alert-<%= message_type %> py-3">
          <%= message %>
        </p>
        <% end %>
      </div>
      <hr class="my-2">
      <%= f.submit "ログイン", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
<% end %>

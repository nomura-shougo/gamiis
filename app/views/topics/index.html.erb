<% content_for :title, 'gamiis' %>
<% content_for :content do %>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Gamiis</h1>
  <p class="lead">ゲームで皆と盛り上がろう！</p>
</div>
<div class="container">
  <div class="row mb-4">
    <div class="col-lg-6 offset-lg-3">
      <div class="row g-3 mb-4">
        <div class="col-12">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="グループ検索">
            <span class="input-group-btn">
              <button type="button" class="btn btn-default">検索</button>
            </span>
          </div>
        </div>
        <div class="col-3">
          <select class="form-select" aria-label="Default select example">
            <option selected>並び替え</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div class="col-9">
          <div class="float-end">
            <a class="btn btn-success" href="#">新しいグループを作る</a>
          </div>
        </div>
      </div>
      <div class="row g-3">
        <div class="col-12">
          <div class="card">
            <div class="row g-0">
              <div class="col-md-3">
                <a href="#">
                  <img src="..." class="stretched-link" alt="Apex IMAGE">
                </a>
              </div>
              <div class="col-md-9">
                <div class="card-title">Apex Legends</div>
                <div class="card-body">
                  <p class="card-text">Apex Legends 総合</p>
                  <p class="card-text"><small>190人</small> <small>5分前</small><a href="#" class="float-end">削除</a></p>
                </div>
              </div>
            </div>
          </div>
          <% @topics.each do |topic| %>
            <div class="card">
              <div class="row g-0">
                <div class="col-md-3">
                  <a href="#">
                    <img src="..." class="stretched-link" alt="Apex IMAGE">
                  </a>
                </div>
                <div class="col-md-9">
                  <div class="card-title"><%= topic.name %></div>
                  <div class="card-body">
                    <p class="card-text"><small>190人</small> <small>5分前</small><a href="#" class="float-end">削除</a></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <%= paginate @topics %>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>

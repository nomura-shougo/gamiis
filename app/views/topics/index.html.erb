<% content_for :title, 'gamiis' %>
<% content_for :content do %>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Gamiis</h1>
  <p class="lead">ゲームで皆と盛り上がろう！</p>
</div>
<div class="container">
  <div class="row mb-4">
    <div class="col-lg-6 offset-lg-3">
      <div class="row g-3 mb-4">
        <div class="col-12">
          <%= search_form_for @q do |f| %>
          <div class="input-group">
            <%= f.search_field :name_cont, class: 'form-control', placeholder: 'グループ検索' %>
            <%= f.submit "検索", class: 'btn btn-default' %>
          </div>
          <% end %>
        </div>
        <!--<div class="col-3">
          <select class="form-select" aria-label="Default select example">
            <option selected>並び替え</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div class="col-3">
          <%= search_form_for @q, class: 'form-select' do |f| %>
          <%= f.select :sorts, [['人数順', 'users.count desc'], ['最近のチャット', 'posts.order(created_at: "DESC").first.created_at desc'], ['最近のグループ', 'created_at desc']],
           {include_blank: '並び替え'}  %>
          <% end %>
        </div>-->
        <div class="col-12">
          <div class="float-end">
            <%= link_to '新しいグループを作る', new_topic_path, class: 'btn btn-success' %>
          </div>
        </div>
        <div class="col-12">
          <% flash.each do |message_type, message| %>
          <p class="text-center alert-<%= message_type %> py-3">
            <%= message %>
          </p>
          <% end %>
        </div>
      </div>
      <div class="row g-3 mb-4">
        <%= render @topics %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @topics %>
      </div>

    </div>
  </div>
</div>
<% end %>
